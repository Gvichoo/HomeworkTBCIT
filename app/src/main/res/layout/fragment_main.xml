<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentMain.MainFragment"
    android:background="#22343C">

    <EditText
        android:id="@+id/etFriends"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/edittext"
        android:hint="   Search"
        android:paddingStart="25dp"
        android:drawableStart="@drawable/googlelogo"
        android:textColorHint="#96A7AF"
        app:layout_constraintEnd_toStartOf="@+id/btnFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFilter"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:focusableInTouchMode="true"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnFilter"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/greenbox"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/filt"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@id/btnFilter"
        app:layout_constraintEnd_toEndOf="@id/btnFilter"
        app:layout_constraintTop_toTopOf="@id/btnFilter"
        app:layout_constraintBottom_toBottomOf="@id/btnFilter"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
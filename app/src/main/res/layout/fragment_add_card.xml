<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addCardFragment.AddCardFragment"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_card"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack2"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack2"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack2"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/tvCardHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="50dp"
        android:text="@string/cardholder_name"
        android:textColor="@color/editTextColor"
        android:layout_marginStart="30dp"
        />
    
    <EditText
        android:id="@+id/etCardHolder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCardHolder"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCardHolder"
        android:layout_marginTop="20dp"
        android:text="@string/card_number"
        android:textColor="@color/editTextColor"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNumber"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:paddingStart="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvExpires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCardNumber"
        android:layout_marginTop="20dp"
        android:text="@string/expires"
        android:textColor="@color/editTextColor"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/etExpires"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvExpires"
        app:layout_constraintStart_toStartOf="@+id/tvExpires"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvCVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/editTextColor"
        app:layout_constraintTop_toTopOf="@+id/tvExpires"
        app:layout_constraintStart_toEndOf="@+id/etExpires"
        android:layout_marginStart="30dp"
        android:text="@string/cvv"/>

    <EditText
        android:id="@+id/etCVV"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCVV"
        app:layout_constraintStart_toStartOf="@+id/tvCVV"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddCard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/add_card"
        app:layout_constraintTop_toBottomOf="@+id/etCVV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:background="@drawable/add_card_button"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>
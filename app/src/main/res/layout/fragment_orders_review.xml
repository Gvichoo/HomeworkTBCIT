<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrdersReviewFragment"
    android:background="@color/item_color">

    <View
        android:layout_width="45dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSatauri"
        android:background="#35383f"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvSatauri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Leave A Reaview"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="35dp"/>

    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSatauri"
        android:background="#35383f"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewline"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/background"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/white"
                android:layout_marginStart="30dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardBackgroundColor="#35383f"
                >

                <ImageView
                    android:id="@+id/ivSkami"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSkami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modern_wingback"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvSkami"
                app:layout_constraintStart_toStartOf="@+id/tvSkami"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/circle"
                app:layout_constraintTop_toTopOf="@id/circle"
                app:layout_constraintBottom_toBottomOf="@id/circle"
                android:text="@string/black"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/item_text_color"/>

            <View
                android:id="@+id/viewLine"
                android:layout_width="2dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@+id/tvColor"
                app:layout_constraintTop_toTopOf="@+id/tvColor"
                app:layout_constraintBottom_toBottomOf="@+id/tvColor"
                android:background="@color/item_text_color"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:text="@string/qty"
                app:layout_constraintTop_toTopOf="@id/circle"
                app:layout_constraintBottom_toBottomOf="@id/circle"
                android:textColor="@color/item_text_color"
                />
            <TextView
                android:id="@+id/qtyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tvQty"
                app:layout_constraintTop_toTopOf="@+id/tvQty"
                app:layout_constraintBottom_toBottomOf="@+id/tvQty"
                android:text="@string/_2"
                android:textSize="12sp"
                android:textColor="@color/item_text_color"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCompleted"
                android:layout_width="65dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2"
                app:layout_constraintBottom_toBottomOf="@id/cardView2"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@id/circle"
                android:background="@drawable/corner"
                android:textColor="@color/item_text_color"
                android:text="@string/completed"
                android:textAllCaps="false"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/btnCompleted"
                app:layout_constraintTop_toBottomOf="@+id/btnCompleted"
                android:text="@string/_280_00"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/viewline2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainCardView"
        android:background="#35383f"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How is you order?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewline2"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please give your rating &amp; also a review.."
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/starRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:numStars="5"
        android:progressTint="@color/white"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/reviewComment"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text"
        android:drawableEnd="@drawable/review"
        android:paddingStart="20dp"
        android:paddingEnd="24dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starRating" />

    <View
        android:id="@+id/viewlinee"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewComment"
        android:background="#35383f"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/cancel_button"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewlinee" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/submit_button"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintTop_toBottomOf="@id/viewlinee" />

</androidx.constraintlayout.widget.ConstraintLayout>
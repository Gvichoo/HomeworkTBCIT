<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentRegister.RegisterFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registeri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnRegister"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/registerbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister"
        app:layout_constraintTop_toTopOf="@+id/btnRegister"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegister"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_bot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivMaan"
        android:layout_width="305dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loginiv"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegister"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLoginRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/convert"
        android:drawablePadding="13dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="1dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:hint="@string/username"
        android:textColorHint="#b886f8"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ivMaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPasswordRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/iconblock"
        android:drawablePadding="13dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="1dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:hint="@string/password"
        android:textColorHint="#b886f8"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etLoginRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ivEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconeye"
        app:layout_constraintTop_toTopOf="@+id/etPasswordRegister"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordRegister"
        app:layout_constraintBottom_toBottomOf="@+id/etPasswordRegister"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ball"
        app:layout_constraintTop_toTopOf="@+id/ivEye"
        app:layout_constraintEnd_toEndOf="@+id/ivEye"
        app:layout_constraintBottom_toBottomOf="@+id/ivEye"
        app:layout_constraintStart_toStartOf="@+id/ivEye"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPasswordRepeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/iconblock"
        android:drawablePadding="13dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="1dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:hint="@string/repeat_password"
        android:textColorHint="#b886f8"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ivEye2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconeye"
        app:layout_constraintTop_toTopOf="@+id/etPasswordRepeat"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordRepeat"
        app:layout_constraintBottom_toBottomOf="@+id/etPasswordRepeat"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ball"
        app:layout_constraintTop_toTopOf="@+id/ivEye2"
        app:layout_constraintEnd_toEndOf="@+id/ivEye2"
        app:layout_constraintBottom_toBottomOf="@+id/ivEye2"
        app:layout_constraintStart_toStartOf="@+id/ivEye2"
        />
    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPasswordRepeat"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
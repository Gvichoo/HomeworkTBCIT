<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back_button_svgrepo_com"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/lets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:text="Let's you in"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/facebook_f_logo_blue_logo_wine"
        android:paddingStart="80dp"
        android:paddingEnd="70dp"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lets"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/google"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="15dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:text="Continue with Apple"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/apple"
        android:paddingStart="100dp"
        android:paddingEnd="90dp"
        android:textStyle="bold"
        android:padding="16dp"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apple"
        android:background="@drawable/button1"
        android:text="Sign in with password"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:padding="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/apple"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:text="Don't have an account?"
        android:layout_marginStart="110dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvAccount"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Sign up"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:paddingEnd="25dp"
        android:paddingStart="2dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:background="@color/grey2"
        app:layout_constraintEnd_toStartOf="@id/or"
        app:layout_constraintTop_toBottomOf="@id/apple"
        app:layout_constraintBottom_toTopOf="@id/password"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        />

    <View
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:background="@color/grey2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/apple"
        app:layout_constraintBottom_toTopOf="@id/password"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

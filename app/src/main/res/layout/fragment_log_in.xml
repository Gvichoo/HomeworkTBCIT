<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentLogin.LogInFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="115dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_bot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnLogin"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/registerbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintTop_toTopOf="@+id/btnLogin"
        app:layout_constraintBottom_toBottomOf="@+id/btnLogin"
        android:layout_marginBottom="5dp"
        android:textSize="22dp"/>

    <ImageView
        android:id="@+id/ivMan"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loginman"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/iconman"
        android:drawablePadding="13dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:hint="Username"
        android:textColorHint="#b886f8"
        app:layout_constraintTop_toBottomOf="@+id/ivMan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/iconblock"
        android:drawablePadding="13dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:hint="Password"
        android:textColorHint="#b886f8"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textPassword"
        />

    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconeye"
        app:layout_constraintTop_toTopOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"
        android:layout_marginEnd="20dp"
        />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ball"
        app:layout_constraintTop_toTopOf="@+id/ivEye"
        app:layout_constraintEnd_toEndOf="@+id/ivEye"
        app:layout_constraintBottom_toBottomOf="@+id/ivEye"
        app:layout_constraintStart_toStartOf="@+id/ivEye"
        />








</androidx.constraintlayout.widget.ConstraintLayout>
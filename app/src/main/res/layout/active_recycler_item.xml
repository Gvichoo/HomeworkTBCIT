<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/item_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/white"
                android:layout_marginStart="30dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardBackgroundColor="#35383f"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chair"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSkami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modern_wingback"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvSkami"
                app:layout_constraintStart_toStartOf="@+id/tvSkami"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/circle"
                app:layout_constraintTop_toTopOf="@id/circle"
                app:layout_constraintBottom_toBottomOf="@id/circle"
                android:text="@string/black"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/item_text_color"/>

            <View
                android:id="@+id/viewLine"
                android:layout_width="2dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@+id/tvColor"
                app:layout_constraintTop_toTopOf="@+id/tvColor"
                app:layout_constraintBottom_toBottomOf="@+id/tvColor"
                android:background="@color/item_text_color"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:text="Qty = 2"
                app:layout_constraintTop_toTopOf="@id/circle"
                app:layout_constraintBottom_toBottomOf="@id/circle"
                android:textColor="@color/item_text_color"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCompleted"
                android:layout_width="65dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2"
                app:layout_constraintBottom_toBottomOf="@id/cardView2"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@id/circle"
                android:background="@drawable/corner"
                android:textColor="@color/item_text_color"
                android:text="@string/completed"
                android:textAllCaps="false"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/btnCompleted"
                app:layout_constraintTop_toBottomOf="@+id/btnCompleted"
                android:text="@string/_280_00"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/leave_review"
                android:background="@drawable/corner2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/item_text_color"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

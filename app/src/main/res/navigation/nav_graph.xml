<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentFragment">

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.homeworktbc.paymentFragment.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_addCardFragment"
            app:destination="@id/addCardFragment" />
        <action
            android:id="@+id/action_paymentFragment_to_deleteCardFragment"
            app:destination="@id/deleteCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.homeworktbc.addCardFragment.AddCardFragment"
        android:label="fragment_add_card"
        tools:layout="@layout/fragment_add_card" >
        <action
            android:id="@+id/action_addCardFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/deleteCardFragment"
        android:name="com.example.homeworktbc.deleteCardFragment.DeleteCardFragment"
        android:label="fragment_delete_card"
        tools:layout="@layout/fragment_delete_card" >
        <action
            android:id="@+id/action_deleteCardFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
</navigation>